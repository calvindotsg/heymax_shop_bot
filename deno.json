{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --allow-env --allow-net --allow-read --allow-write --watch supabase/functions/telegram-bot/index.ts",
    "test": "deno test --allow-env --allow-net --allow-read --allow-write tests/",
    "test:coverage": "deno test --allow-env --allow-net --allow-read --allow-write --coverage=coverage tests/",
    "test:watch": "deno test --allow-env --allow-net --allow-read --allow-write --watch tests/"
  },
  "imports": {
    "@supabase/functions-js": "https://esm.sh/@supabase/functions-js@2",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2",
    "std/": "https://deno.land/std@0.224.0/",
    "testing/": "https://deno.land/std@0.224.0/testing/"
  },
  "fmt": {
    "include": ["src/", "tests/", "supabase/functions/"]
  },
  "lint": {
    "include": ["src/", "tests/", "supabase/functions/"]
  }
}
